- var txt = "Lorem ipsum dolor sit amet consectetur adipisicing elit. In et dicta porro? Veritatis vero dolorem ut at optio corrupti fugit dolore, qui totam aliquid amet debitis mollitia ullam animi quidem exercitationem! Libero quas earum cum molestias iusto!"

.styleguide-infos
  p= txt
section(class="grid col--1")
  - var nbr = 6
  h3 columns grid
  section(class="grid styleguide-grids col--"+nbr)
    - for(var i = 0; i < nbr; i++)
      .col
  h3 nested grid
  section(class="grid styleguide-grids col--2")
    - for(var i = 0; i < 2; i++)
      .col
        - var nbr2 = 3
        section(class="grid col--"+nbr2)
          - for(var y = 0; y < nbr2; y++)
            .col

