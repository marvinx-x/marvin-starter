append vars

- var txt = "Lorem ipsum dolor sit amet consectetur adipisicing elit. In et dicta porro? Veritatis vero dolorem ut at optio corrupti fugit dolore, qui totam aliquid amet debitis mollitia ullam animi quidem exercitationem! Libero quas earum cum molestias iusto!"
- var typeFonts = ["google", "custom"]
- var weightFonts = ["Thin", "Extra-light", "Light", "regular", "Medium", "Semi-bold", "Bold", "Extra-bold", "Black"]
- var fontCats = ["used", "unused"]

p= txt
section(class="grid  col--"+typeFonts.length)
  each typeFont, key in typeFonts
    .col
      h3.styleguide-title #{typeFont} fonts example

      - var fontFamilyIndex = googleFontsUrl.indexOf('=') + 1
      - var fontFamilyName = googleFontsUrl.substr(fontFamilyIndex, googleFontsUrl.indexOf(':wght')-fontFamilyIndex);
      h1= fontFamilyName

      if(googleFontsUrl && googleFontsUrl.length)
        - var getStringBeforeIndex = googleFontsUrl.indexOf('@') + 1
        - var getFontWeights = googleFontsUrl.substr(getStringBeforeIndex, googleFontsUrl.indexOf('&')-getStringBeforeIndex);
        - var nbrWeights = getFontWeights.replace(/00|;/g, '')

        each fontCat in fontCats
          h3.styleguide-title #{fontCat} fonts
          .styleguide-styles
            each weightFont, key in weightFonts
              case fontCat
                when "used"
                  if(nbrWeights.indexOf(key+1) !== -1)
                    p(class="font-weight--"+weightFont.toLowerCase())= weightFont + " " + (key+1) + "00"
                      span.italic  Italic
                  else if(nbrWeights.length === 0 && key === 0)
                    p No #{fontCat} fonts
                when "unused"
                  if(nbrWeights.indexOf(key+1) === -1)
                    p.crossed= weightFont + " " + (key+1) + "00"
                  else if(key === 1)
                    p No #{fontCat} fonts
      else
        p No #{typeFont} fonts loaded
