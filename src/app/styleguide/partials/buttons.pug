- var txt = "Lorem ipsum dolor sit amet consectetur adipisicing elit. In et dicta porro? Veritatis vero dolorem ut at optio corrupti fugit dolore, qui totam aliquid amet debitis mollitia ullam animi quidem exercitationem! Libero quas earum cum molestias iusto!"
- var buttons = ["default", "outlined"];
- var href= "javascript:void(0);";

p= txt
section(class="grid styleguide-buttons col--1")
  .col
    h3 Link
    h4= buttons[0]
    div(class="grid col--3")
      .col: a(href=href class='btn icon' title="This is a link with icon"): +icon("link", "material-icons")
      .col: a(href=href class='btn radius icon' title="This is a link radius with icon"): +icon("link", "material-icons")
      .col: a(href=href class='btn icon rounded' title="This is a link rounded with icon"): +icon("link", "material-icons")
      .col: a(href=href class='btn') Link
      .col: a(href=href class='btn radius') Link radius
      .col: a(href=href class='btn rounded') Link rounded
      .col: a(href=href class='btn')
        +icon("arrow_back", "material-icons")
        span Icon text
      .col: a(href=href class='btn')
        span Icon text
        +icon("arrow_forward", "material-icons")
      .col: a(href=href class='btn disabled' tabindex="-1") Link disabled

    h4= buttons[1]
    div(class="grid col--3")
      .col: a(href=href class='btn icon outlined'): +icon("link", "material-icons")
      .col: a(href=href class='btn radius icon outlined'): +icon("link", "material-icons")
      .col: a(href=href class='btn icon rounded outlined'): +icon("link", "material-icons")
      .col: a(href=href class='btn outlined') Link
      .col: a(href=href class='btn radius outlined') Link radius
      .col: a(href=href class='btn rounded outlined') Link rounded
      .col: a(href=href class='btn outlined')
        +icon("arrow_back", "material-icons")
        span Icon text
      .col: a(href=href class='btn outlined')
        span Icon text
        +icon("arrow_forward", "material-icons")
      .col: a(href=href class='btn disabled outlined' tabindex="-1") Link disabled

  .col
    h3 button
    h4= buttons[0]
    div(class="grid col--3")
      .col: button(class='btn icon' aria-label="This is a button with icon"): +icon("link", "material-icons")
      .col: button(class='btn radius icon' aria-label="This is a button radius with icon"): +icon("link", "material-icons")
      .col: button(class='btn icon rounded' aria-label="This is a button rounded with icon"): +icon("link", "material-icons")
      .col: button(class='btn') Button
      .col: button(class='btn radius') Button radius
      .col: button(class='btn rounded') Button rounded
      .col: button(class='btn')
        +icon("arrow_back", "material-icons")
        span Icon text
      .col: button(class='btn')
        span Icon text
        +icon("arrow_forward", "material-icons")
      .col: button(class='btn disabled' tabindex="-1") Button disabled

    h4= buttons[1]
    div(class="grid col--3")
      .col: button(class='btn icon outlined' aria-label="This is a button with icon"): +icon("link", "material-icons")
      .col: button(class='btn radius icon outlined' aria-label="This is a button radius with icon"): +icon("link", "material-icons")
      .col: button(class='btn icon rounded outlined' aria-label="This is a button rounded with icon"): +icon("link", "material-icons")
      .col: button(class='btn outlined') Button
      .col: button(class='btn radius outlined') Button radius
      .col: button(class='btn rounded outlined') Button rounded
      .col: button(class='btn outlined')
        +icon("arrow_back", "material-icons")
        span Icon text
      .col: button(class='btn outlined')
        span Icon text
        +icon("arrow_forward", "material-icons")
      .col: button(class='btn disabled outlined' tabindex="-1") Button disabled

