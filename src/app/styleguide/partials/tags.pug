- var txt = "Lorem ipsum dolor sit amet consectetur adipisicing elit. In et dicta porro? Veritatis vero dolorem ut at optio corrupti fugit dolore, qui totam aliquid amet debitis mollitia ullam animi quidem exercitationem! Libero quas earum cum molestias iusto!"

- var nbrTags = 4
- var typeTags = ["default", "radius", "rounded", "icon"]

p= txt
section(class="grid styleguide-tags col--2")
  .col
    h3= typeTags[0]
    ul.tags
      -for(var i = 0; i < nbrTags; i++)
        li: button(class='tag') Tag

    h4= typeTags[1]
    ul.tags
      -for(var i = 0; i < nbrTags; i++)
        li: button(class='tag radius') Tag

    h4= typeTags[2]
    ul.tags
      -for(var i = 0; i < nbrTags; i++)
        li: button(class='tag rounded') Tag

    h4 icon left
    ul.tags
      -for(var i = 0; i < nbrTags; i++)
        li: button(class='tag')
              +icon("bookmark", "font-awesome")
              span Tag

    h4 icon right
    ul.tags
      -for(var i = 0; i < nbrTags; i++)
        li: button(class='tag radius')
              span Tag
              +icon("close")

  .col
    h3 outlined
    ul.tags
      -for(var i = 0; i < nbrTags; i++)
        li: button(class='tag outlined') Tag

    h4 #{typeTags[1]}
    ul.tags
      -for(var i = 0; i < nbrTags; i++)
        li: button(class='tag radius outlined') Tag

    h4 #{typeTags[2]}
    ul.tags
      -for(var i = 0; i < nbrTags; i++)
        li: button(class='tag rounded outlined') Tag

    h4 icon left
    ul.tags
      -for(var i = 0; i < nbrTags; i++)
        li: button(class='tag outlined')
              +icon("bookmark", "font-awesome")
              span Tag

    h4 icon right
    ul.tags
      -for(var i = 0; i < nbrTags; i++)
        li: button(class='tag outlined radius')
              span Tag
              +icon("close")


