  - var extensions = ["jpg", "png", "gif", "svg", "dataUri"]

  - var sizes = [1920, 1120, 320];
  - var originalImg = 'https://via.placeholder.com/'+sizes[0]
  - var srcSet = originalImg +' '+ sizes[0]+"w, https://via.placeholder.com/1920 "+sizes[1]+"w, https://via.placeholder.com/1120 "+sizes[2]+"w";

  //- .styleguide-grid
