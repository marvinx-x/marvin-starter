mixin burger-svg()
  - var widthBurger = 52
  - var widthLine = 22
  - var heightBurger = 40
  - var heightLine = 3
  - var spaceLines = 4
  - var space = heightLine + spaceLines
  - var positionTop = heightBurger/2 - (heightLine*3 + spaceLines*2) / 2
  - var positionLeft = widthBurger/2 - widthLine/2
  svg(aria-hidden="true" role="button" viewBox='0 0 '+widthBurger+' '+heightBurger+'' style='enable-background:new 0 0 '+widthBurger+' '+heightBurger+';' preserveAspectRatio='xMidYMid meet')
    g(aria-hidden="true")
      - for(var i=0; i < 3; i++)
          rect(aria-hidden="true" x=positionLeft y='' + (i * space + positionTop) + '' width=widthLine height=heightLine)
    g(aria-hidden="true"): text(opacity="0") open menu


