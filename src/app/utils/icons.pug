mixin description-svg()
  - var widthDescription = 152
  - var heightDescription = 20
  - var fontSizeDescription = 17
  - var dy = 16.5
  svg(aria-hidden="true" width=widthDescription height=heightDescription viewBox='0 0 '+widthDescription+' '+heightDescription+'' style='enable-background:new 0 0 '+widthDescription+' '+heightDescription+';' preserveAspectRatio='none' xml:space="preserve"): g
    defs
      mask#mask-description
        rect
        text(x='50%' y=0 dx=0, dy=dy text-anchor="middle" font-size=fontSizeDescription) marvin
          tspan starter
    rect(aria-hidden="true" mask="url(#mask-description)")

