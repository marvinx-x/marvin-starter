block vars
  - var documentTitle = "Marvin Starter"
  - var lang = "fr"
  - var headerLess = false
  - var navLess = false
  - var footerLess = false

html(lang=lang)

  head
  block head

    include ../../includes/layout/head

    title=documentTitle

    include ../../utils/mixins

  body(class=navLess ? 'nav-less' : null)

    div#app

      if(!headerLess)
        include ../../components/header/header

      if(!navLess)
        include ../../components/nav/nav

      block body

      if(!footerLess)
        include ../../components/footer/footer

