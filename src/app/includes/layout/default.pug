block vars
  // GLOBAL
  - var documentTitle = "Marvin Starter - Start here"
  - var lang = "fr"
  // PATHS
  - var imgDir = 'assets/images/'
  // CLASSES
  - var headerLess = false
  - var navLess = false
  - var footerLess = false
  - var styleguide = false
  // FONT
  - var fontCustomName = "Raleway";
  - var fontFamilyName = "Inter";
  - var googleFontsUrl = "https://fonts.googleapis.com/css2?family="+fontFamilyName.replace(" ", "+")+":wght@300;400;500;600;700&display=optional"
  // ITEMS STYLEGUIDE
  - var starterItems = ["colors", "Typography", "Titles", "Icons", "images", "Buttons", "Forms", "menu", "Grid", "Accessibility"]

html(lang=lang)

  head
    block head

    include ../../includes/layout/head

    title=documentTitle

    include ../../utils/mixins

  body( class=navLess ? 'nav-less' : null || styleguide ? 'styleguide' : null)

    div#app(style="font-family:"+fontFamilyName+", sans-serif;")

      if(!headerLess)
        include ../../components/header/header

      if(!navLess)
        include ../../components/nav/nav

      main(role="main")
        block main

      if(!footerLess)
        include ../../components/footer/footer

